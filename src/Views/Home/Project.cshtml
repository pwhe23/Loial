@model Loial.Project
@{
    ViewBag._Title = Model.Id > 0 ? "Edit Project" : "Add Project";
    Layout = "_Layout";
}
<ul class="nav nav-tabs">
    <li role="presentation"><a href="@Url.Action("Builds", new {Model.Id})">Builds</a></li>
    <li role="presentation" class="active"><a href="#">Edit</a></li>
</ul>
<form method="POST">
    <div class="form-group">
        <label>Id</label>
        <div class="form-control">@Model.Id</div>
    </div>
    <div class="form-group">
        <label>Project Display Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>@Html.CheckBoxFor(x => x.IsActive) Is Active</label>
    </div>
    <div class="form-group">
        <label>Repository Name</label>
        @Html.TextBoxFor(x => x.Repository, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Clone Url</label>
        @Html.TextBoxFor(x => x.CloneUrl, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Branch</label>
        @Html.TextBoxFor(x => x.Branch, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Command</label>
        @Html.TextAreaFor(x => x.Command, new { @class = "form-control", rows = 4 })
    </div>
    <button class="btn btn-primary">Save</button>
    @if (Model.Id > 0)
    {
        <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
        <a href="@Url.Action("Delete", new {Model.Id})" class="btn btn-warning">Delete</a>
    }
</form>
